<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Selected Product</title>
    <link rel="stylesheet" href="/slick-carousel/slick/slick.css">
    <link rel="stylesheet" href="/slick-carousel/slick/slick-theme.css">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            outline: none;
            scroll-behavior: smooth;
            scrollbar-width: none;
            text-transform: uppercase;
        }

        nav {
            background: aliceblue;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .navbar {
            padding: 1rem;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.25rem;
        }

        .nav-link {
            font-weight: 500;
        }

        .nav-link.active {
            color: #007bff !important;
        }

        .dropdown-menu {
            border-radius: 0.5rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        
        .content {
            margin-top: 90px;
            padding-bottom: 30px;
            height: calc(100vh - 70px);
            overflow-y: auto;
            background-color: #f4f7fc;
        }

        /* Carousel Image Adjustments */
        .product-images img {
            width: 100%;
            height: 350px;
            object-fit: cover;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .product-details {
            text-align: center;
            padding: 40px 20px;
        }

        .product-details h1 {
            font-size: 30px;
            font-weight: 700;
        }

        .product-details h6 {
            font-size: 18px;
            color: #6c757d;
        }

        .product-details .price {
            font-size: 25px;
            color: #333;
            font-weight: 700;
            margin-top: 10px;
        }

        .product-details .description {
            font-size: 16px;
            color: #555;
            margin-top: 20px;
        }

        /* Quantity Control Section */
        .quantity-control {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
            gap: 10px;
        }

        .quantity-btn {
            padding: 12px;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            cursor: pointer;
            font-size: 18px;
            border-radius: 5px;
            transition: all 0.3s ease;
            width: 40px;
            height: 40px;
        }

        .quantity-btn:hover {
            background-color: #ff7f32;
            color: white;
            border-color: #ff7f32;
        }

        .quantity-input {
            width: 60px;
            text-align: center;
            padding: 8px;
            font-size: 18px;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .quantity-input:focus {
            border-color: #ff7f32;
            outline: none;
        }

        /* Buy Now Button Styling */
        .buy-now button {
            width: 100%;
            padding: 15px 0;
            font-size: 20px;
            font-weight: 700;
            background-color: orange;
            border: none;
            color: white;
            cursor: pointer;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .buy-now button:hover {
            background-color: #ff7f32;
        }

        hr {
            border: 0;
            border-top: 1px solid #ddd;
            margin: 20px 0;
        }
    </style>
</head>

<body>

    <%- include('navbar') %>
    

    <div class="content" id="content">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="product-images" id="items">
                        <% product.images.forEach((i) => { %>
                            <div class="img">
                                <img src="<%= i %>" alt="Product Image">
                            </div>
                        <% }) %>
                    </div>
                </div>
                <hr>
                <div class="col-12 product-details">
                    <h1 class="fw-bold"><%= product.product %></h1>
                    <h6>From <%= product.storeName %></h6>
                    <p class="price">â‚¹ <%= product.price %></p>
                    <p class="description"><%= product.description %></p>
                </div>
                <div class="col-12 py-2">
                    <form action="/addtocart/<%= product.id %>" method="POST">
                        <div class="row">
                            <div class="col-12 col-md-4 offset-md-4">
                                <div class="quantity-control">
                                    <button class="quantity-btn minus" type="button">-</button>
                                    <input type="number" class="quantity-input" min="1" max="<%= product.quantity %>" name="quantity">
                                    <button class="quantity-btn plus" type="button">+</button>
                                </div>
                                <div class="container buy-now p-0 m-0">
                                    <button>Add to Cart</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script src="/slick-carousel/slick/slick.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#items').slick({
                arrows: true,
                draggable: true,
                slidesToScroll: 1,
                slidesToShow: 1,
                autoplay: true,
                autoplaySpeed: 2000, // slower autoplay speed
            });
        });

        document.querySelectorAll('.quantity-btn').forEach(button => {
                button.addEventListener('click', () => {
                    const input = button.parentElement.querySelector('.quantity-input');
                    let value = parseInt(input.value);
                    if (button.classList.contains('plus')) {
                        value++;
                    } else {
                        value = value > 1 ? value - 1 : 1;
                    }

                    input.value = value;
                });
            });
        document.getElementById('home').classList.add('active')
    </script>
</body>

</html>
