<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Business</title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            outline: none;
            scroll-behavior: smooth;
            scrollbar-width: none;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
        }

        nav {
            background: aliceblue;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .navbar {
            padding: 1rem;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.25rem;
        }

        .nav-link {
            font-weight: 500;
        }

        .nav-link.active {
            color: #007bff !important;
        }

        .dropdown-menu {
            border-radius: 0.5rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .content {
            margin-top: 90px;
            padding: 30px 0;
        }

        .business-item {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .business-item hr {
            margin: 20px 0;
            border-top: 1px solid #ddd;
        }

        .business-details {
            flex: 1;
            min-width: 280px;
            padding: 0 15px;
        }

        .business-details h4 {
            font-weight: 600;
            color: #333;
        }

        .business-details p {
            font-size: 0.9rem;
            color: #555;
            margin: 5px 0;
        }

        .no-business-message {
            text-align: center;
            font-size: 1.2rem;
            color: #555;
        }

        @media (max-width: 768px) {
            .business-item {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg position-fixed top-0 w-100">
        <div class="container">
            <a class="navbar-brand" href="#">Biz Finder | Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 w-100 justify-content-end">
                    <li class="nav-item dropdown position-relative">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/images/blank-profile-picture-973460_1280.webp" alt="Dropdown" style="width: 30px; height: 30px; border-radius: 50%;">
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/admin">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/approvebusiness">Approve</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/admin/business">Business</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="content" id="content">
        <div class="container">
            <% if(business.length > 0){ %>
                <div class="row m-0 g-3">
                    <% business.forEach((i) => { %>
                        <div class="col-12">
                            <div class="business-item">
                                <div class="business-details">
                                    <h4 class="fw-bold"><%= i.storeName %></h4>
                                    <p><strong>Description:</strong> <%= i.storeDescription %></p>
                                    <p><strong>Store ID:</strong> <%= i.id %></p>
                                    <p><strong>Email:</strong> <%= i.email %></p>
                                    <p><strong>Status:</strong> <%= i.status %></p>
                                    <p><strong>Location:</strong> <%= i.location %></p>
                                    <p><strong>District:</strong> <%= i.district %></p>
                                    <p><strong>Pincode:</strong> <%= i.pincode %></p>
                                </div>
                            </div>
                            <hr>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="no-business-message">
                    <h4>No businesses registered</h4>
                </div>
            <% } %>
        </div>
    </div>

    <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('business').classList.add('active')
    </script>
</body>

</html>
